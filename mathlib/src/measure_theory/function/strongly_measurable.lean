    have : measurable (G ‚àò f) := measurable.subtype_mk H.measurable,
    exact hG.measurable_embedding.measurable_comp_iff.1 this },
  { have : is_separable (g ‚Åª¬π' (range (g ‚àò f))) := hg.is_separable_preimage H.is_separable_range,
    convert this,
